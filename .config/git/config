[merge]
    tool = vimdiff

[mergetool]
    keepBackup = false

[commit]
    verbose = true

[rebase]
    autoSquash = true

[credential]
    helper = cache

[filter "lfs"]
    process = git-lfs filter-process
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f

[diff "bplist"]
    textconv = plutil -convert xml1 -o -
